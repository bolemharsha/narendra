// JavaScript code to create a small pop-up
function showPopup() {
    const popup = window.open('', '', 'width=300,height=150');
    popup.document.write('<html><head><title>Hacked!</title></head>');
    popup.document.write('<body style="font-family: Arial, sans-serif; text-align: center; padding: 20px;">');
    popup.document.write('<h3>You have been hacked! HaHa!</h3>');
    popup.document.write('<button onclick="window.close();" style="background-color: #f44336; color: white; padding: 5px 15px; border: none; border-radius: 4px;">Close</button>');
    popup.document.write('</body></html>');
    popup.document.close();
}

// Call this function to display the pop-up
showPopup();
